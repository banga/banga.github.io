{
  "name": "blog-gen",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "compile": "tsc --build",
    "build": "TZ=UTC node build/index.js",
    "build:watch": "SHOULD_AUTO_RELOAD=1 ./node_modules/nodemon/bin/nodemon.js",
    "draft:watch": "SHOULD_AUTO_RELOAD=1 POSTS_DIR=./drafts npm run build:watch",
    "serve": "npx http-server ./_site -c-1 -d false"
  },
  "nodemonConfig": {
    "ext": "ts,tsx,json,md,css",
    "exec": "npm run compile && npm run build || exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@fontsource/inter": "^5.0.16",
    "@resvg/resvg-js": "^2.6.0",
    "html-entities": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-katex": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "satori": "^0.10.11",
    "typescript": "^5.3.3"
  }
}
